<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs", { title: title }) %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || "Chat App" %></title>
    <link rel="stylesheet" href="/static/style/chat.css">
    <script src="/static/script/chat.js" defer></script>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <main class="chat-container">
        <div class="chat-messages" id="chat-messages">
            <!-- Messages will appear here -->
        </div>
        <div class="input-container">
            <textarea id="user-input" rows="1" placeholder="Type your message..."></textarea>
            <button id="send-button">Send</button>
        </div>
    </main>
    <%- include("partials/footer.ejs") %>
</body>
</html>
